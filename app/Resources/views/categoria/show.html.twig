{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class=" col  s12 m8 offset-m2 l6 offset-l3">
            <div class="card">
                <div class="card-content">
                    <span class="card-title black-text">
                        <strong>Detalle de la categoría</strong>
                    </span>
                    <p>La categoria que usted ha seleccionado tiene los siguientes datos:</p>
                    <ul>
                        <li><strong>Identificador No.</strong> {{ categorium.id }}</li>
                        <li><strong>Nombre:</strong> {{ categorium.nombre }}</li>
                        <li><strong>Descripción:</strong> {{ categorium.descripcion }}</li>
                    </ul>
                </div>
                <div class="card-action">
                    <div class="row">
                        <div class="col">
                            <a href="{{ path('categoria_index') }}" class="blue-text">Volver a lista de Categorías</a>
                            <a href="{{ path('categoria_edit', { 'id': categorium.id }) }}" class="blue-text">Editar</a>
                        </div>
                        <div class="col">
                            {{ form_start(delete_form) }}
                            <button class="btn waves-effect waves-light  blue" type="submit">Eliminar</button>
                            {{ form_end(delete_form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}