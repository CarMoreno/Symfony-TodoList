{% extends 'base.html.twig' %}

{% block body %}
<div class="row">
		<div class=" col  s12 m8 offset-m2 l6 offset-l3">
			<div class="card">
				<div class="card-content">
					<span class="card-title black-text"><strong>¡Edita una categoría!</strong></span>
					<p>Modifica una categoria existente</p>
					    {{ form_start(edit_form) }}
						{{ form_widget(edit_form) }}
				</div>
				<div class="card-action">
                    <div class="row">
                        <div class="col">
                            <button class="btn waves-effect waves-light  blue" type="submit">Editar</button>
                        {{ form_end(edit_form) }}
                        </div>
                        <div class="col">
                            {{ form_start(delete_form) }}
                                <button class="btn waves-effect waves-light  blue" type="submit">Eliminar</button>
                            {{ form_end(delete_form) }}
                        </div>
                        <div class="col">
                            <a class="right-align blue-text" href="{{ path('categoria_index') }}">Volver a lista de categorías</a>
                        </div>
                    </div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
