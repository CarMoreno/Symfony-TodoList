{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class=" col  s12 m8 offset-m2 l6 offset-l3">
            <div class="card">
                <div class="card-content">
                    <span class="card-title black-text">
                        <strong>Detalle de la tarea</strong>
                    </span>
                    <p>La tarea que usted ha seleccionado tiene los siguientes datos:</p>
                    <ul>
                        <li><strong>Identificador No.</strong> {{ tarea.id }}</li>
                        <li><strong>Titulo:</strong> {{ tarea.titulo }}</li>
                        <li><strong>Descripción:</strong> {{ tarea.descripcion }}</li>
                        <li><strong>Categoria:</strong> {{ tarea.categoria.nombre }}</li>
                        <li><strong>Fecha de creación:</strong>{% if tarea.fecha %}{{ tarea.fecha|date('Y-m-d H:i:s') }}{% endif %}</li>
                    </ul>
                </div>
                <div class="card-action">
                    <div class="row">
                        <div class="col">
                            <a href="{{ path('tarea_index') }}" class="blue-text">Volver a lista de Tareas</a>
                            <a href="{{ path('tarea_edit', { 'id': tarea.id }) }}" class="blue-text">Editar</a>
                        </div>
                        <div class="col">
                            {{ form_start(delete_form) }}
                            <button class="btn waves-effect waves-light  blue" type="submit">Eliminar</button>
                            {{ form_end(delete_form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
